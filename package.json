{
    "name": "zenfuse",
    "version": "0.1.1",
    "description": "Neat crypto exchanges connector",
    "main": "src/index.js",
    "scripts": {
        "test": "npm run unit-tests",
        "e2e-tests": "MOCK_HTTP=false node --trace-warnings node_modules/.bin/jest --no-cache --runInBand",
        "unit-tests": "node --trace-warnings node_modules/.bin/jest",
        "format": "eslint --fix .; prettier --write .",
        "lint": "eslint ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zenfuse/zenfuse.js.git"
    },
    "author": "zenfuse.io",
    "license": "AGPL-3.0-or-later",
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "bugs": {
        "url": "https://github.com/zenfuse/zenfuse.js/issues"
    },
    "homepage": "https://zenfuse.js",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^25.2.4",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.3.1",
        "jest-json-schema": "^5.0.0",
        "nock": "^13.2.1",
        "prettier": "^2.4.1",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "got": "^11.8.2",
        "ws": "^8.2.3"
    },
    "jest": {
        "testMatch": [
            "**/tests/**/*(?<!jest.setup\\.).js",
            "**/?(*.)+(spec|test).js"
        ],
        "testPathIgnorePatterns": [
            "jest.setup.js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>tests/jest.setup.js"
        ]
    }
}
