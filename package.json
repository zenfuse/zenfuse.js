{
    "name": "zenfuse",
    "version": "0.2.0",
    "description": "Neat crypto exchanges connector",
    "main": "src/index.js",
    "scripts": {
        "test": "npm run test:unit && npm run test:integration",
        "test:e2e": "TEST_MODE=e2e node --unhandled-rejections=strict node_modules/.bin/jest --no-cache --runInBand --expand",
        "test:integration": "TEST_MODE=integration node --unhandled-rejections=strict node_modules/.bin/jest --expand",
        "test:unit": "TEST_MODE=unit jest --testMatch '**/?(*.)+(spec).js'",
        "format": "eslint --fix .; prettier --write .",
        "lint": "eslint .",
        "update-mocks": "sh scripts/update_static_mocks.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zenfuse/zenfuse.js.git"
    },
    "author": "zenfuse.io",
    "license": "AGPL-3.0-or-later",
    "engines": {
        "node": ">=12",
        "npm": ">=6"
    },
    "bugs": {
        "url": "https://github.com/zenfuse/zenfuse.js/issues"
    },
    "homepage": "https://zenfuse.js",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "dotenv": "^10.0.0",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^25.2.4",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.3.1",
        "jest-json-schema": "^5.0.0",
        "nock": "^13.2.1",
        "prettier": "^2.4.1",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "got": "^11.8.2",
        "web3-utils": "^1.6.1",
        "ws": "^8.2.3"
    },
    "jest": {
        "slowTestThreshold": 30000,
        "bail": true,
        "testMatch": [
            "**/tests/**/*.test.js"
        ],
        "setupFilesAfterEnv": [
            "<rootDir>tests/jest.setup.js"
        ],
        "globalSetup": "<rootDir>tests/global.setup.js"
    }
}
