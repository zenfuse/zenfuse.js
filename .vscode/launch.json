    "version": "0.2.0",
    "configurations": [
        {
            "name": "E2E Tests",
            "request": "launch",
            "runtimeArgs": ["run-script", "test:e2e"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "name": "Integration Tests",
            "request": "launch",
            "runtimeArgs": ["run-script", "test:integration"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        },
        {
            "name": "Unit Tests",
            "request": "launch",
            "runtimeArgs": ["run-script", "test:unit"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "node"
        }
    ]
}
